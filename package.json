{
  "name": "srcubmail",
  "version": "1.0.0",
  "description": "A Chrome extension for scraping emails from web pages with advanced filtering and clipboard functionality",
  "main": "dist/popup.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "dev": "tsc --watch",
    "copy-assets": "cp manifest.json dist/ && cp popup.html dist/ && cp styles.css dist/ && cp -r icons dist/ && cp -r fonts dist/ && cp rules.json dist/",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "chrome-extension",
    "email-scraper",
    "typescript",
    "web-scraping"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
